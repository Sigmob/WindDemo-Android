<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="48dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_sdk_init"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="SDK 初始化" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_reward"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="激励视频" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_new_interstitial"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="插屏广告" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_splash"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="开屏广告" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_native"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="原生广告" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_device"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="设备信息" />

    </LinearLayout>

</LinearLayout>